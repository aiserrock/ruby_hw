<% form({method: :post}, {obj: @params}) do |f| %>
  <form method="post">
    <div class="grid-container">
      <div class="grid-x grid-padding-x">
        <div class="large-12 cell">
          <%= f.input(:value1, type: :number, placeholder: "3", label: "Значение1") %>
        </div>
        <div class="large-12 cell">
          <%= f.input(:value2, type: :number, placeholder: "4", label: "Значение2") %>
        </div>
        <div class="large-12 cell">
          <%= f.button(value: "Суммировать", class: "button success") %>
        </div>
      </div>
    </div>
  </form>
<% end %>